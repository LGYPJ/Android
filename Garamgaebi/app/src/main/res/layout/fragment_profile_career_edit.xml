<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.garamgaebi.garamgaebi.viewModel.CareerViewModel" />
           </data>
    <ScrollView
        android:id="@+id/sv_root"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_layout"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:background="@color/whiteForBackground"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_career_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/activity_career_tv_companyTitle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="@string/company"
                android:textColor="@color/black80"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/activity_career_et_companyDesc"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@{(viewModel.companyFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout)}"
                android:maxLines="1"
                android:maxLength="22"
                android:inputType="text"
                android:gravity="center_vertical"
                android:hint='@{viewModel.companyHint}'
                android:paddingStart="12dp"
                android:text="@={viewModel.company}"
                android:textColor="@color/black80"
                android:textColorHint="@color/grayForBtn"
                android:textSize="14sp"
                app:onFocusing="@{(check) -> viewModel.setBoolean(viewModel.companyFocusing,viewModel.companyFirst,check)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_career_tv_companyTitle" />

            <TextView
                android:id="@+id/activity_career_tv_company_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayAe"
                android:textStyle="bold"
                android:textSize="12sp"
                android:visibility="visible"
                android:text='@{viewModel.company.length() +"/22"}'
                app:layout_constraintEnd_toEndOf="@id/activity_career_et_companyDesc"
                app:layout_constraintBottom_toTopOf="@id/activity_career_et_companyDesc"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:id="@+id/activity_career_tv_positionTitle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/position"
                android:textColor="@color/black80"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_career_et_companyDesc" />

            <EditText
                android:id="@+id/activity_career_et_position"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@{(viewModel.positionFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout)}"
                android:maxLines="1"
                android:maxLength="22"
                android:gravity="center_vertical"
                android:hint='@{viewModel.positionHint}'
                android:paddingStart="12dp"
                android:text="@={viewModel.position}"
                android:textColor="@color/black80"
                android:textColorHint="@color/grayForBtn"
                android:textSize="14sp"
                android:inputType="text"
                app:onFocusing="@{(check) -> viewModel.setBoolean(viewModel.positionFocusing,viewModel.positionFirst,check)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_career_tv_positionTitle" />
            <TextView
                android:id="@+id/activity_career_tv_position_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayAe"
                android:textStyle="bold"
                android:textSize="12sp"
                android:visibility="visible"
                android:text='@{viewModel.position.length() +"/22"}'
                app:layout_constraintEnd_toEndOf="@id/activity_career_et_position"
                app:layout_constraintBottom_toTopOf="@id/activity_career_et_position"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:id="@+id/activity_career_tv_periodTitle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/working_period"
                android:textColor="@color/black80"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_career_et_position" />

            <EditText
                android:id="@+id/activity_career_et_startPeriod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@{viewModel.startFirst || viewModel.startDateIsValid ? (viewModel.startFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout) : @drawable/basic_red_border_layout}"
                android:gravity="center_vertical"
                android:hint="@string/start_date"
                android:padding="14dp"
                android:paddingStart="12dp"
                android:textColor="@color/black80"
                android:textColorHint="@color/grayForBtn"
                android:textSize="14sp"
                android:text="@={viewModel.startDate}"
                app:onFocusing="@{(check) -> viewModel.showDatePicker(viewModel.startFocusing,viewModel.startFirst,viewModel.showStart,check)}"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@id/activity_career_tv_period"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_career_tv_periodTitle" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:clickable="false"
                android:src="@drawable/ic_calendar_20dp"
                app:layout_constraintEnd_toEndOf="@id/activity_career_et_startPeriod"
                app:layout_constraintTop_toTopOf="@id/activity_career_et_startPeriod"
                app:layout_constraintBottom_toBottomOf="@id/activity_career_et_startPeriod"
                />
            <TextView
                android:id="@+id/activity_career_tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14.5dp"
                android:text="~"
                android:textColor="@color/grayForBtn"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/activity_career_et_startPeriod"
                app:layout_constraintEnd_toStartOf="@id/activity_career_et_endPeriod"
                app:layout_constraintStart_toEndOf="@id/activity_career_et_startPeriod"
                app:layout_constraintTop_toTopOf="@id/activity_career_et_startPeriod"/>

            <EditText
                android:id="@+id/activity_career_et_endPeriod"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@{viewModel.endFirst || viewModel.endDateIsValid ? (viewModel.endFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout) : @drawable/basic_red_border_layout}"
                android:gravity="center_vertical"
                android:hint="@string/end_date"
                android:padding="11dp"
                android:paddingStart="12dp"
                android:textColor="@color/black80"
                android:textColorHint="@color/grayForBtn"
                android:textSize="14sp"
                android:text="@={viewModel.endDate}"
                app:onFocusing="@{(check) -> viewModel.showDatePicker(viewModel.endFocusing,viewModel.endFirst,viewModel.showEnd,check)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_career_tv_period"
                app:layout_constraintTop_toBottomOf="@+id/activity_career_tv_periodTitle" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:clickable="false"
                android:src="@drawable/ic_calendar_20dp"
                app:layout_constraintEnd_toEndOf="@id/activity_career_et_endPeriod"
                app:layout_constraintTop_toTopOf="@id/activity_career_et_endPeriod"
                app:layout_constraintBottom_toBottomOf="@id/activity_career_et_endPeriod"
                />

                <CheckBox
                    android:id="@+id/activity_career_checkbox"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:checked="@={viewModel.checkBox}"
                    android:background="@drawable/ic_checkbox_16dp"
                    android:button="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@id/activity_career_checkbox_desc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/activity_career_checkbox_desc"/>

            <TextView
                android:id="@+id/activity_career_checkbox_desc"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="@string/working"
                android:textColor="@{viewModel.checkBox ? @color/black80 : @color/gray8a}"
                app:layout_constraintStart_toEndOf="@id/activity_career_checkbox"
                app:layout_constraintTop_toBottomOf="@id/activity_career_et_startPeriod"/>
            <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_career_remove_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="68dp"
            android:background="@drawable/basic_blue_white_btn_layout"
            android:text="@string/remove"
            android:textColor="@color/blueForBtn"
            android:textSize="16sp"
            android:outlineProvider="none"
            android:layout_marginEnd="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_career_save_btn"
            app:layout_constraintBottom_toBottomOf="parent">
        </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/activity_career_save_btn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginBottom="68dp"
                android:background="@{(viewModel.companyIsValid &amp;&amp; viewModel.positionIsValid  &amp;&amp; viewModel.startDateIsValid  &amp;&amp; viewModel.endDateIsValid) ? @drawable/basic_blue_btn_layout : @drawable/basic_gray_btn_layout}"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:outlineProvider="none"
                android:clickable="@{(viewModel.companyIsValid &amp;&amp; viewModel.positionIsValid &amp;&amp; viewModel.startDateIsValid &amp;&amp; viewModel.endDateIsValid) ? true : false}"
                app:layout_constraintStart_toEndOf="@id/activity_career_remove_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

