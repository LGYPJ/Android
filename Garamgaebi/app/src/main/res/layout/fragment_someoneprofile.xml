<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteForBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/activity_someoneProfile_sv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_someoneProfile_cl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/activity_someoneProfile_ivProfile"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:background="@drawable/default_profile"
                app:civ_border_overlay="true"
                app:civ_border_width="0dp"
                app:civ_border_color="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/activity_someoneProfile_tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:text="@string/some_id"
                android:textStyle="bold"
                android:textAppearance="@style/some_id"
                app:layout_constraintTop_toBottomOf="@id/activity_someoneProfile_ivProfile"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/activity_someoneProfile_tvSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/black80"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_someoneProfile_tvUsername" />

            <TextView
                android:id="@+id/activity_someoneProfile_tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:text=""
                android:textColor="@color/blueForBtn"
                android:textSize="16sp"

                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/activity_someoneProfile_tvSchool" />
            <TextView
                android:id="@+id/activity_someoneProfile_tv_intro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:text=""
                android:textColor="@color/black80"
                android:textSize="14sp"
                android:visibility="visible"
                android:background="@drawable/basic_gray_border_layout"
                app:layout_constraintTop_toBottomOf="@id/activity_someoneProfile_tvEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_someoneProfile_cl_snsTitle"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_someoneProfile_cl_snsTitle"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/basic_gray_container_title"
                app:layout_constraintTop_toBottomOf="@id/activity_someoneProfile_tv_intro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_someoneProfile_cl_snsDesc"
                >

                <TextView
                    android:id="@+id/activity_someoneProfile_tv_snsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:padding="12dp"
                    android:text="@string/sns"
                    android:textColor="@color/black80"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayForBtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_someoneProfile_cl_snsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/basic_gray_container_desc"
                app:layout_constraintTop_toBottomOf="@id/activity_someoneProfile_cl_snsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_someoneProfile_cl_careerTitle"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_someoneProfile_RV_sns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                </androidx.recyclerview.widget.RecyclerView>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_someoneProfile_cl_careerTitle"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/basic_gray_container_title"
                app:layout_constraintTop_toBottomOf="@id/activity_someoneProfile_cl_snsDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_someoneProfile_cl_careerDesc"
                >
                <TextView
                    android:id="@+id/activity_someoneProfile_tv_careerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:padding="12dp"
                    android:text="@string/career"
                    android:textColor="@color/black80"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayForBtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_someoneProfile_cl_careerDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/basic_gray_container_desc"
                app:layout_constraintTop_toBottomOf="@id/activity_someoneProfile_cl_careerTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_someoneProfile_cl_eduTitle"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_someoneProfile_RV_career"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                </androidx.recyclerview.widget.RecyclerView>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_someoneProfile_cl_eduTitle"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/basic_gray_container_title"
                app:layout_constraintTop_toBottomOf="@id/activity_someoneProfile_cl_careerDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activity_someoneProfile_cl_eduDesc"
                >
                <TextView
                    android:id="@+id/activity_someoneProfile_tv_eduTitle"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:padding="12dp"
                    android:text="교육"
                    android:textColor="@color/black80"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayForBtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_someoneProfile_cl_eduDesc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/basic_gray_container_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_someoneProfile_RV_edu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                </androidx.recyclerview.widget.RecyclerView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
