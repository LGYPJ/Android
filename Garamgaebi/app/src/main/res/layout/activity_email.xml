<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/activity_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="68dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_email_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필에 기재할\n이메일 주소를 알려주세요"
        android:textSize="18sp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_email_title" />
    <EditText
        android:id="@+id/activity_email_et_email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="이메일 주소를 입력주세요"
        android:textColorHint="#D9D9D9"
        android:paddingStart="16dp"
        android:background="@drawable/register_et_border"
        app:layout_constraintTop_toBottomOf="@id/activity_email_desc"/>
    <TextView
        android:id="@+id/activity_email_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 조건"
        app:layout_constraintTop_toBottomOf="@id/activity_email_et_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"/>
    <Button
        android:id="@+id/activity_email_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/register_btn_color"
        android:stateListAnimator="@null"
        android:text="다음"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>