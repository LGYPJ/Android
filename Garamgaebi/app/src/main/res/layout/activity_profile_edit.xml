<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_edit_profile_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 편집"
            android:textSize="20sp"
            android:textColor="@color/black80"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_edit_profile_back_btn"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_35dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayForBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_edit_profile"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/activity_edit_profile_ivProfile"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/activity_myprofile_graycircle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id="@+id/activity_edit_profile_ivplus"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_add_circle_22dp"
            app:layout_constraintEnd_toEndOf="@id/activity_edit_profile_ivProfile"
            app:layout_constraintBottom_toBottomOf="@id/activity_edit_profile_ivProfile"
            />
        <TextView
            android:id="@+id/activity_edit_profile_tv_nickTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="닉네임 "
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_ivProfile"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blueForBtn"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_nickTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_nickTitle"
            ></TextView>
        <EditText
            android:id="@+id/activity_edit_profile_et_nick"
            android:layout_width="0dp"
            android:layout_height="48dp"

            android:gravity="center_vertical"
            android:text=""
            android:bufferType="spannable"
            android:textSize="14sp"
            android:textColor="@color/black80"
            android:paddingStart="12dp"
            android:textColorHint="@color/grayForBtn"
            android:hint="닉네임을 입력해주세요 (최대 8글자)"
            android:background="@drawable/basic_gray_border_layout"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_nickTitle"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/activity_edit_profile_tv_teamTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="소속 "
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_nick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blueForBtn"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_teamTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_teamTitle"
            ></TextView>
        <EditText
            android:id="@+id/activity_edit_profile_et_team"
            android:layout_width="0dp"
            android:layout_height="48dp"

            android:gravity="center_vertical"
            android:text=""
            android:bufferType="spannable"
            android:textSize="14sp"
            android:textColor="@color/black80"
            android:paddingStart="12dp"
            android:textColorHint="@color/grayForBtn"
            android:hint="닉네임을 입력해주세요"
            android:background="@drawable/basic_gray_border_layout"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_teamTitle"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/activity_edit_profile_tv_emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="이메일 "
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_team"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blueForBtn"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_emailTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_emailTitle"
            ></TextView>
        <EditText
            android:id="@+id/activity_edit_profile_et_email"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text=""
            android:bufferType="spannable"
            android:textSize="14sp"
            android:textColor="@color/black80"
            android:paddingStart="12dp"
            android:textColorHint="@color/grayForBtn"
            android:hint="이메일을 입력해주세요"
            android:background="@drawable/basic_gray_border_layout"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_emailTitle"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/activity_edit_profile_tv_introTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="자기소개"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_email"
            />
        <EditText
            android:id="@+id/activity_edit_profile_et_intro"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="top"
            android:text=""
            android:bufferType="spannable"
            android:textSize="14sp"
            android:textColor="@color/black80"
            android:padding="12dp"
            android:textColorHint="@color/grayForBtn"
            android:hint="100자 이내로 작성해주세요"
            android:background="@drawable/basic_gray_border_layout"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_introTitle"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_education_save_btn"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:layout_marginBottom="68dp"
        android:outlineProvider="none"
        android:background="@drawable/basic_gray_btn_layout"
        android:text="저장하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>


