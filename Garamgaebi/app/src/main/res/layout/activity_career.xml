<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/activity_career_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경력"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="115dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_career_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="회사"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/activity_career_et_company"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_career_title" />
    <EditText
        android:id="@+id/activity_career_et_company"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="회사명을 입력주세요"
        android:textColorHint="#D9D9D9"
        android:paddingStart="16dp"
        android:background="@drawable/activity_authentication_et_border"
        app:layout_constraintTop_toBottomOf="@id/activity_career_company"/>

    <TextView
        android:id="@+id/activity_career_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="직함"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/activity_career_et_rank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_career_et_company" />
    <EditText
        android:id="@+id/activity_career_et_rank"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="직함을 입력주세요(예: 백엔드 개발자)"
        android:textColorHint="#D9D9D9"
        android:paddingStart="16dp"
        android:background="@drawable/activity_authentication_et_border"
        app:layout_constraintTop_toBottomOf="@id/activity_career_rank"/>

    <TextView
        android:id="@+id/activity_career_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재직 기간"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_career_et_rank" />
    <EditText
        android:id="@+id/activity_career_et_start_period"
        android:inputType="textEmailAddress"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="시작년월"
        android:textColorHint="#D9D9D9"
        android:paddingStart="16dp"
        android:background="@drawable/activity_authentication_et_border"
        app:layout_constraintTop_toBottomOf="@id/activity_career_period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_career_wave"/>

    <TextView
        android:id="@+id/activity_career_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:textColor="#D9D9D9"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/activity_career_et_start_period"
        app:layout_constraintEnd_toStartOf="@id/activity_career_et_end_period"
        app:layout_constraintStart_toEndOf="@id/activity_career_et_start_period"
        app:layout_constraintTop_toTopOf="@id/activity_career_et_start_period" />

    <EditText
        android:id="@+id/activity_career_et_end_period"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/activity_authentication_et_border"
        android:hint="종료년월"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:textColorHint="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="@id/activity_career_et_start_period"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_career_wave"
        app:layout_constraintTop_toTopOf="@id/activity_career_et_start_period" />

    <TextView
        android:id="@+id/activity_career_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="아직 경력이 없으신가요?"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_career_btn"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/activity_career_tv_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="교육 입력하기"
        android:textSize="16sp"
        android:textColor="#2294FF"
        app:layout_constraintBottom_toTopOf="@+id/activity_career_btn"
        app:layout_constraintStart_toEndOf="@id/activity_career_tv" />

    <Button
        android:id="@+id/activity_career_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/activity_intro_btn_color"
        android:stateListAnimator="@null"
        android:text="프로필 저장"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_career_et_start_period" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재직 중"
        android:textColor="#8A8A8A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        app:layout_constraintTop_toTopOf="@+id/checkBox" />
</androidx.constraintlayout.widget.ConstraintLayout>