<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/activity_education_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교육"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="68dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가장 최근에 소속되었던\n교육기관을 알려주세요"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_education_title" />

    <TextView
        android:id="@+id/activity_education_tv_institution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="교육기관"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/activity_education_et_institution"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <EditText
        android:id="@+id/activity_education_et_institution"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="교육기관을 입력주세요"
        android:textColorHint="#D9D9D9"
        android:paddingStart="16dp"
        android:background="@drawable/register_et_border"
        app:layout_constraintTop_toBottomOf="@id/activity_education_tv_institution"/>

    <TextView
        android:id="@+id/activity_education_tv_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="전공/과정"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/activity_education_et_major"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_education_et_institution" />
    <EditText
        android:id="@+id/activity_education_et_major"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="전공/과정을 입력해주세요 (예: 웹 개발 과정)"
        android:textColorHint="#D9D9D9"
        android:paddingStart="16dp"
        android:background="@drawable/register_et_border"
        app:layout_constraintTop_toBottomOf="@id/activity_education_tv_major"/>

    <CheckBox
        android:id="@+id/activity_education_cb_isLearning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_education_et_major" />

    <TextView
        android:id="@+id/activity_education_tv_isLearning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재학 중"
        android:textColor="#8A8A8A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_education_cb_isLearning"
        app:layout_constraintStart_toEndOf="@+id/activity_education_cb_isLearning"
        app:layout_constraintTop_toTopOf="@+id/activity_education_cb_isLearning" />

    <TextView
        android:id="@+id/activity_education_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="경력이 있으신가요?"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_education_btn_next"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/activity_education_tv_career"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="경력 입력하기"
        android:textSize="16sp"
        android:textColor="#2294FF"
        app:layout_constraintBottom_toTopOf="@+id/activity_education_btn_next"
        app:layout_constraintStart_toEndOf="@id/activity_education_tv" />

    <Button
        android:id="@+id/activity_education_btn_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/register_btn_color_enable"
        android:stateListAnimator="@null"
        android:text="프로필 저장"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>