<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="184dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_home_user_profile_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="ic_"
        android:background="@drawable/fragment_home_user_profile_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_home_user_cl_info"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_home_user_cl_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/fragment_home_user_info_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_home_user_profile_img">

        <TextView
            android:id="@+id/item_home_user_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/item_home_user_tv_org"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/item_home_user_tv_org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소속"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_home_user_tv_nickname"
            app:layout_constraintBottom_toTopOf="@id/item_home_user_tv_major"/>

        <TextView
            android:id="@+id/item_home_user_tv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공 / 직무"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_home_user_tv_org" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>