<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="184dp"
    android:background="@drawable/fragment_home_user_profile_border">

    <ImageView
        android:id="@+id/item_home_user_iv_profile_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_item_fragment_home_user_profile_default"
        app:layout_constraintBottom_toBottomOf="@+id/item_home_user_iv_profile"
        app:layout_constraintEnd_toEndOf="@+id/item_home_user_iv_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_home_user_iv_profile" />
    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/item_home_user_iv_profile"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        app:sriv_left_top_corner_radius="12dp"
        app:sriv_right_top_corner_radius="12dp"
        app:sriv_left_bottom_corner_radius="0dp"
        app:sriv_right_bottom_corner_radius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="-1dp"
        android:background="@drawable/fragment_home_user_iv_border"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_home_user_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black80"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_home_user_iv_profile" />

    <TextView
        android:id="@+id/item_home_user_tv_belong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text=""
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="10sp"
        android:textColor="@color/black80"
        android:visibility="visible"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_home_user_tv_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_home_user_tv_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black80"
        android:textSize="10sp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/item_home_user_tv_major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_home_user_tv_nickname" />

    <TextView
        android:id="@+id/item_home_user_tv_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textColor="@color/black80"
        android:textSize="10sp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_home_user_tv_org" />
</androidx.constraintlayout.widget.ConstraintLayout>