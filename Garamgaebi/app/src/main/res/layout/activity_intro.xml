<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/activity_intro_vpContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_intro_btn"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/activity_intro_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/activity_intro_indicator"
            app:ci_drawable="@drawable/activity_intro_indicator_selected"
            app:ci_drawable_unselected="@drawable/activity_intro_indicator_unselected"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center"/>
    </FrameLayout>

    <Button
        android:id="@+id/activity_intro_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/register_btn_color_enable"
        android:stateListAnimator="@null"
        android:text="@string/next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>