<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/home_seminar_item_border"
        android:backgroundTint="@color/grayF5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/ic_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_item_home_closed"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/ic_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_item_home_for_free"
            app:layout_constraintStart_toEndOf="@+id/ic_closed"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_home_seminar_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="세미나 이름"
            android:textColor="@color/black80"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_closed" />
        <TextView
            android:id="@+id/item_home_seminar_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@id/item_home_seminar_tv_place"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_home_seminar_tv_date_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜날짜"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/item_home_seminar_tv_place_data"
            app:layout_constraintStart_toEndOf="@+id/item_home_seminar_tv_date" />
        <TextView
            android:id="@+id/item_home_seminar_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="장소"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/item_home_seminar_tv_place_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="장소장소"
            android:textSize="14sp"
            android:textColor="@color/black80"
            app:layout_constraintStart_toEndOf="@id/item_home_seminar_tv_place"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>