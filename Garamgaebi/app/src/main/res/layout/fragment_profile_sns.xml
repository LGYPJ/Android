<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_sns_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_sns_tv_linkTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="링크"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activity_sns_et_linkDesc"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/basic_gray_border_layout"

            android:gravity="center_vertical"
            android:hint="http://"
            android:paddingStart="12dp"
            android:text=""
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_tv_linkTitle" />

        <TextView
            android:id="@+id/activity_sns_tv_nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="직함"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_sns_et_linkDesc" />

        <EditText
            android:id="@+id/activity_sns_et_name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/basic_gray_border_layout"

            android:gravity="center_vertical"
            android:hint="표시할 이름을 입력해주세요 (예:블로그, 깃허브 등)"
            android:paddingStart="12dp"
            android:text=""
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_sns_tv_nameTitle" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_sns_save_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="68dp"
            android:background="@drawable/basic_gray_btn_layout"
            android:text="저장하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:outlineProvider="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></androidx.appcompat.widget.AppCompatButton>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

