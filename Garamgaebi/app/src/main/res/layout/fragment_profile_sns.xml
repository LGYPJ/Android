<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="snsViewModel"
            type="com.garamgaebi.garamgaebi.viewModel.SNSViewModel" />
        <variable
            name="common"
            type="com.garamgaebi.garamgaebi.common.GaramgaebiFunction"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_sns_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_sns_tv_nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="@string/sns_add_type"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activity_sns_et_name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@{snsViewModel.typeFirst || snsViewModel.snsTypeIsValid ? (snsViewModel.snsTypeFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout) : @drawable/basic_red_border_layout}"
            android:gravity="center_vertical"
            android:hint='@{snsViewModel.snsTypeFocusing ? "" : snsViewModel.typeInputDesc}'
            android:paddingStart="12dp"
            android:text="@={snsViewModel.snsType}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayD9"
            android:textSize="14sp"
            app:onFocusing="@{(check) -> snsViewModel.setBoolean(snsViewModel.snsTypeFocusing,snsViewModel.typeFirst,check)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_tv_nameTitle" />
        <TextView
            android:id="@+id/activity_sns_tv_nameState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{snsViewModel.typeState}"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/redForText"
            android:visibility="@{snsViewModel.typeFirst || snsViewModel.snsTypeIsValid ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="@id/activity_sns_et_name"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_et_name"
            />
        <TextView
            android:id="@+id/activity_sns_et_name_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayD9"
            android:textSize="14sp"
            android:visibility="invisible"
            android:text='@{snsViewModel.snsType.length() +"/22"}'
            app:layout_constraintEnd_toEndOf="@id/activity_sns_et_name"
            app:layout_constraintBottom_toTopOf="@id/activity_sns_et_name"
            android:layout_marginBottom="4dp"
            />


        <TextView
            android:id="@+id/activity_sns_tv_linkTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:text="@string/sns_add_link"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_et_name" />

        <EditText
            android:id="@+id/activity_sns_et_linkDesc"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@{snsViewModel.addressFirst || snsViewModel.snsAddressIsValid ? (snsViewModel.snsAddressFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout) : @drawable/basic_red_border_layout}"
            android:gravity="center_vertical"
            android:hint='@{snsViewModel.snsAddressFocusing ? "" : snsViewModel.addressInputDesc}'
            android:paddingStart="12dp"
            android:text="@={snsViewModel.snsAddress}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:onFocusing="@{(check) -> snsViewModel.setBoolean(snsViewModel.snsAddressFocusing,snsViewModel.addressFirst,check)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_tv_linkTitle" />
        <TextView
            android:id="@+id/activity_sns_tv_linkState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{snsViewModel.linkState}"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/redForText"
            android:visibility="@{snsViewModel.addressFirst || snsViewModel.snsAddressIsValid ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="@id/activity_sns_et_linkDesc"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_et_linkDesc"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_sns_save_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="68dp"
            android:background="@{(!snsViewModel.typeFirst &amp;&amp; !snsViewModel.addressFirst &amp;&amp; snsViewModel.snsAddressIsValid &amp;&amp; snsViewModel.snsTypeIsValid) ? @drawable/basic_blue_btn_layout : @drawable/basic_gray_btn_layout}"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:outlineProvider="none"
            android:clickable="@{(!snsViewModel.typeFirst &amp;&amp; !snsViewModel.addressFirst &amp;&amp; snsViewModel.snsAddressIsValid &amp;&amp; snsViewModel.snsTypeIsValid) ? true : false}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>

