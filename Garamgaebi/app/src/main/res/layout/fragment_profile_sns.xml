<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <import type="com.example.template.garamgaebi.src.main.profile.SnsAddFragment"/>
        <variable
            name="snsAddFragment"
            type="com.example.template.garamgaebi.src.main.profile.SnsAddFragment" />
        <variable
            name="snsViewModel"
            type="com.example.template.garamgaebi.viewModel.SNSViewModel" />
        <variable
            name="editTextViewModel"
            type="com.example.template.garamgaebi.viewModel.EditTextViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_sns_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_sns_tv_linkTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:text="@string/sns_add_link"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_et_name" />

        <EditText
            android:id="@+id/activity_sns_et_linkDesc"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@{snsViewModel.addressFirst &amp;&amp; snsViewModel.snsAddressIsValid ? @drawable/basic_gray_border_layout : @drawable/basic_red_border_layout}"
            android:gravity="center_vertical"
            android:hint="@string/sns_add_link_desc"
            android:paddingStart="12dp"
            android:text="@={snsViewModel.snsAddress}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            android:onClick="@{()->snsViewModel.setTrueAddress()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_tv_linkTitle" />

        <TextView
            android:id="@+id/activity_sns_tv_nameTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="@string/sns_add_type"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activity_sns_et_name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@{snsViewModel.typeFirst &amp;&amp; snsViewModel.snsTypeIsValid ? @drawable/basic_gray_border_layout : @drawable/basic_red_border_layout}"

            android:gravity="center_vertical"
            android:hint="@string/sns_add_type_desc"
            android:paddingStart="12dp"
            android:text="@={snsViewModel.snsType}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:onFocusLost="@{(view,check) -> editTextViewModel.setBackgroundEditTextOnFocus(view,check,snsViewModel.snsTypeIsValid)}"
            android:onClick="@{()->snsViewModel.setTrueType()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_sns_tv_nameTitle" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_sns_save_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="68dp"
            android:background="@{(snsViewModel.snsAddressIsValid &amp;&amp; snsViewModel.snsTypeIsValid) ? @drawable/basic_blue_btn_layout : @drawable/basic_gray_btn_layout}"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:outlineProvider="none"
            android:clickable="@{(snsViewModel.snsAddressIsValid &amp;&amp; snsViewModel.snsTypeIsValid) ? true : false}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>

