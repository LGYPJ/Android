<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_authentication_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:text="@string/school_certification"
        android:textColor="@color/black80"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_authentication_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/school_certification_desc"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_authentication_title" />

    <EditText
        android:id="@+id/activity_authentication_et_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/register_et_border"
        android:hint="@string/example"
        android:paddingStart="16dp"
        android:textColorHint="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/activity_authentication_desc" />

    <TextView
        android:id="@+id/activity_authentication_domain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="\@gachon.ac.kr"
        android:textColor="#D9D9D9"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/activity_authentication_et_email"
        app:layout_constraintEnd_toEndOf="@id/activity_authentication_et_email"
        app:layout_constraintTop_toTopOf="@id/activity_authentication_et_email" />

    <Button
        android:id="@+id/activity_authentication_btn_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/register_btn_color"
        android:stateListAnimator="@null"
        android:enabled="false"
        android:text="@string/send_email"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/activity_authentication_et_email" />

    <TextView
        android:id="@+id/activity_authentication_tv_ann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_email_desc"
        android:textColor="@color/black80"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_authentication_btn_email" />

    <EditText
        android:id="@+id/activity_authentication_et_num"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:inputType="number"
        android:background="@drawable/register_et_border"
        android:hint="@string/certification_num"
        android:paddingStart="16dp"
        android:textColorHint="#D9D9D9"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/activity_authentication_tv_ann" />

    <Button
        android:id="@+id/activity_authentication_btn_num"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/register_btn_color"
        android:stateListAnimator="@null"
        android:text="@string/certification_num_check"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/activity_authentication_et_num" />

</androidx.constraintlayout.widget.ConstraintLayout>