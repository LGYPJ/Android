<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_withdrawal_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴"
            android:textSize="20sp"
            android:textColor="@color/black80"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_withdrawal_back_btn"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_35dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayForBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_withdrawal_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_withdrawal">

        <TextView
            android:id="@+id/activity_withdrawal_tv_noteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴 시 유의사항"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_withdrawal_tv_noteDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/withdrawal_note_desc"
            android:textColor="@color/black80"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_withdrawal_tv_noteTitle" />

        <TextView
            android:id="@+id/activity_withdrawal_tv_titleTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="계정 이메일"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_withdrawal_tv_noteDesc" />

        <TextView
            android:id="@+id/activity_withdrawal_tv_titleDesc"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/activity_withdrawal_email"
            android:bufferType="spannable"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="umc@naver.com"
            android:textColor="@color/black80"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_withdrawal_tv_titleTitle" />

        <TextView
            android:id="@+id/activity_withdrawal_tv_periodTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="탈퇴 사유"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_withdrawal_tv_titleDesc" />

        <TextView
            android:id="@+id/activity_withdrawal_et_option"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/basic_gray_border_layout"
            android:paddingStart="12dp"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            android:hint="탈퇴 사유를 선택해주세요"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_withdrawal_tv_periodTitle" />

        <ImageView
            android:id="@+id/activity_withdrawal_iv_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19.51dp"
            android:src="@drawable/ic_arrow_bottom_14dp"
            app:layout_constraintBottom_toBottomOf="@+id/activity_withdrawal_et_option"
            app:layout_constraintEnd_toEndOf="@id/activity_withdrawal_et_option"
            app:layout_constraintTop_toTopOf="@id/activity_withdrawal_et_option"></ImageView>
        <EditText
            android:id="@+id/activity_withdrawal_et_content"
            android:layout_width="0dp"
            android:layout_height="152dp"
            android:padding="11dp"
            android:hint="내용을 적어주세요"
            android:gravity="top"
            android:textSize="14sp"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:paddingStart="12dp"
            android:background="@drawable/basic_gray_border_layout"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_withdrawal_et_option"
            app:layout_constraintStart_toStartOf="parent"/>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_withdrawal_checkbox_rl"
            android:layout_width="16dp"
            android:layout_height="16dp"

            android:background="@drawable/activity_servicecenter_checkbox_container"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/activity_withdrawal_tv_checkboxDesc">

            <CheckBox
                android:id="@+id/activity_withdrawal_checkbox"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ic_checkbox_16dp"
                android:button="@android:color/transparent"></CheckBox>
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_withdrawal_tv_checkboxDesc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="회원 탈퇴에 관한 모든 내용을 숙지하고,\n회원 탈퇴를 신청합니다."
            android:textColor="#8A8A8A"
            app:layout_constraintStart_toEndOf="@id/activity_withdrawal_checkbox_rl"
            app:layout_constraintTop_toBottomOf="@id/activity_withdrawal_et_content"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_withdrawal_send_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="68dp"
            android:outlineProvider="none"
            android:background="@drawable/basic_gray_btn_layout"
            android:text="탈퇴하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </androidx.appcompat.widget.AppCompatButton>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


