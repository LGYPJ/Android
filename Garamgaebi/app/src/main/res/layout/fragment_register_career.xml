<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.garamgaebi.garamgaebi.viewModel.CareerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteForBackground"
        android:id="@+id/container_layout"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/fragment_register_org_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/fragment_register_indicator_fourth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_career_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/career"
            android:textColor="@color/black80"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_register_org_indicator" />

        <TextView
            android:id="@+id/fragment_career_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/register_career_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_career_tv_title" />

        <TextView
            android:id="@+id/fragment_career_tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/company"
            android:textColor="@color/black80"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/fragment_career_et_company"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_career_tv_desc" />

        <TextView
            android:id="@+id/fragment_register_career_tv_company_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@{viewModel.company.length()+@string/register_belong_length}"
            app:layout_constraintBottom_toTopOf="@+id/fragment_career_et_company"
            app:layout_constraintEnd_toEndOf="@id/fragment_career_et_company" />

        <EditText
            android:id="@+id/fragment_career_et_company"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@{(viewModel.companyFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout)}"
            android:hint='@{viewModel.companyHint}'
            app:onFocusing="@{(check) -> viewModel.setBoolean(viewModel.companyFocusing,viewModel.companyFirst,check)}"
            android:text="@={viewModel.company}"
            android:maxLength="22"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:textColorHint="#D9D9D9"
            app:layout_constraintTop_toBottomOf="@id/fragment_career_tv_company" />

        <TextView
            android:id="@+id/fragment_career_tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/position"
            android:textColor="@color/black80"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/fragment_career_et_position"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_career_et_company" />
        <TextView
            android:id="@+id/fragment_register_career_tv_position_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@{viewModel.position.length()+@string/register_belong_length}"
            app:layout_constraintBottom_toTopOf="@+id/fragment_career_et_position"
            app:layout_constraintEnd_toEndOf="@id/fragment_career_et_position" />
        <EditText
            android:id="@+id/fragment_career_et_position"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@{(viewModel.positionFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout)}"
            android:hint='@{viewModel.positionHint}'
            app:onFocusing="@{(check) -> viewModel.setBoolean(viewModel.positionFocusing,viewModel.positionFirst,check)}"
            android:text="@={viewModel.position}"
            android:paddingStart="16dp"
            android:maxLength="22"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="14sp"
            android:textColorHint="@color/grayD9"
            app:layout_constraintTop_toBottomOf="@id/fragment_career_tv_position" />

        <TextView
            android:id="@+id/fragment_career_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/working_period"
            android:textColor="@color/black80"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_career_et_position" />


        <EditText
            android:id="@+id/activity_career_et_startPeriod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@{viewModel.startFirst || viewModel.startDateIsValid ? (viewModel.startFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout) : @drawable/basic_red_border_layout}"
            android:gravity="center_vertical"
            android:hint="@string/start_date"
            android:padding="14dp"
            android:paddingStart="12dp"
            android:text="@={viewModel.startDate}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            android:visibility="visible"
            app:onFocusing="@{(check) -> viewModel.showDatePicker(viewModel.startFocusing,viewModel.startFirst,viewModel.showStart,check)}"
            app:layout_constraintEnd_toStartOf="@id/activity_career_tv_period"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_career_tv_date" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:clickable="false"
            android:src="@drawable/ic_calendar_20dp"
            app:layout_constraintBottom_toBottomOf="@id/activity_career_et_startPeriod"
            app:layout_constraintEnd_toEndOf="@id/activity_career_et_startPeriod"
            app:layout_constraintTop_toTopOf="@id/activity_career_et_startPeriod" />

        <TextView
            android:id="@+id/activity_career_tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14.5dp"
            android:text="~"
            android:textColor="@color/grayForBtn"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/activity_career_et_startPeriod"
            app:layout_constraintEnd_toStartOf="@id/activity_career_et_endPeriod"
            app:layout_constraintStart_toEndOf="@id/activity_career_et_startPeriod"
            app:layout_constraintTop_toTopOf="@id/activity_career_et_startPeriod" />

        <EditText
            android:id="@+id/activity_career_et_endPeriod"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@{viewModel.endFirst || viewModel.endDateIsValid ? (viewModel.endFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout) : @drawable/basic_red_border_layout}"
            android:gravity="center_vertical"
            android:hint="@string/end_date"
            android:padding="11dp"
            android:paddingStart="12dp"
            android:text="@={viewModel.endDate}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:onFocusing="@{(check) -> viewModel.showDatePicker(viewModel.endFocusing,viewModel.endFirst,viewModel.showEnd,check)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_career_tv_period"
            app:layout_constraintTop_toTopOf="@+id/activity_career_et_startPeriod" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:clickable="false"
            android:src="@drawable/ic_calendar_20dp"
            app:layout_constraintBottom_toBottomOf="@id/activity_career_et_endPeriod"
            app:layout_constraintEnd_toEndOf="@id/activity_career_et_endPeriod"
            app:layout_constraintTop_toTopOf="@id/activity_career_et_endPeriod" />

        <CheckBox
            android:id="@+id/activity_career_checkbox"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_checkbox_16dp"
            android:button="@android:color/transparent"
            android:checked="@={viewModel.checkBox}"
            app:layout_constraintTop_toBottomOf="@id/activity_career_et_startPeriod"
            app:layout_constraintStart_toStartOf="@id/activity_career_et_startPeriod"/>

        <TextView
            android:id="@+id/activity_career_checkbox_desc"
            android:text="@string/working"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@{viewModel.checkBox ? @color/black80 : @color/gray8a}"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/activity_career_checkbox"
            app:layout_constraintBottom_toBottomOf="@+id/activity_career_checkbox"
            app:layout_constraintStart_toEndOf="@+id/activity_career_checkbox"/>

        <TextView
            android:id="@+id/fragment_register_career_tv_no_career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/register_no_career"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_career_save_btn"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fragment_register_career_tv_go_edu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/register_go_education"
            android:textColor="@color/blueForBtn"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_career_save_btn"
            app:layout_constraintStart_toEndOf="@id/fragment_register_career_tv_no_career" />
        <Button
            android:id="@+id/fragment_career_save_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@{(viewModel.companyIsValid &amp;&amp; viewModel.positionIsValid  &amp;&amp; viewModel.startDateIsValid  &amp;&amp; viewModel.endDateIsValid) ? @drawable/basic_blue_btn_layout : @drawable/basic_gray_btn_layout}"
            android:clickable="@{(!viewModel.companyFirst &amp;&amp; !viewModel.positionFirst &amp;&amp; !viewModel.startFirst &amp;&amp; !viewModel.endFirst &amp;&amp; viewModel.companyIsValid &amp;&amp; viewModel.positionIsValid &amp;&amp; viewModel.startDateIsValid &amp;&amp; viewModel.endDateIsValid) ? true : false}"
            android:outlineProvider="none"
            android:text="@string/register_belong_profile_save"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>