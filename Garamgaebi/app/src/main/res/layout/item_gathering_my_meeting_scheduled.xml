<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_gathering_my_meeting_scheduled_tv_date"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:text="xx월 xx일\nxx:xx"
        android:background="@drawable/fragment_home_my_meeting_border"
        android:backgroundTint="@color/blue10"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/black80"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_gathering_my_meeting_scheduled_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 이름"
        android:textColor="@color/black80"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_gathering_my_meeting_scheduled_tv_date"
        app:layout_constraintBottom_toTopOf="@id/item_gathering_my_meeting_scheduled_tv_place"/>
    <TextView
        android:id="@+id/item_gathering_my_meeting_scheduled_tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소 이름"
        android:textSize="16sp"
        android:textColor="@color/black80"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/item_gathering_my_meeting_scheduled_tv_name"
        app:layout_constraintStart_toEndOf="@id/item_gathering_my_meeting_scheduled_tv_date"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/item_gathering_my_meeting_scheduled_iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:src="@drawable/ic_item_gathering_my_meeting_more"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>