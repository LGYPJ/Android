<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_complete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입이\n완료되었습니다"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="102dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/activity_complete_cb_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_complete_cb_old"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_complete_tv_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 동의하기"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_complete_cb_whole"
        app:layout_constraintStart_toEndOf="@+id/activity_complete_cb_whole"
        app:layout_constraintTop_toTopOf="@+id/activity_complete_cb_whole" />

    <CheckBox
        android:id="@+id/activity_complete_cb_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@id/activity_complete_cb_personal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_complete_tv_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 만 14세 이상이에요"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_complete_cb_old"
        app:layout_constraintStart_toEndOf="@+id/activity_complete_cb_old"
        app:layout_constraintTop_toTopOf="@+id/activity_complete_cb_old" />

    <CheckBox
        android:id="@+id/activity_complete_cb_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_education_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_complete_tv_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 이용약관 및 개인정보수집이용 동의"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_complete_cb_personal"
        app:layout_constraintStart_toEndOf="@+id/activity_complete_cb_personal"
        app:layout_constraintTop_toTopOf="@id/activity_complete_cb_personal" />
    <Button
        android:id="@+id/activity_education_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/activity_intro_btn_color"
        android:stateListAnimator="@null"
        android:text="시작하기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>