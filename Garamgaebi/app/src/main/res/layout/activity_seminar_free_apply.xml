<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.seminar.SeminarFreeApplyActivity">
    
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_seminar_free"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_seminar_free_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세미나"
            android:textSize="20sp"
            android:textColor="@color/black80"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_seminar_free_back_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_35dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/seminar_light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_seminar_free_apply_info"
        android:layout_width="375dp"
        android:layout_height="137dp"
        android:background="@drawable/btn_seminar_present"
        android:layout_marginTop="16dp"
        android:paddingStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/top_seminar_free"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_seminar_free_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2차 세미나"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black80"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/activity_seminar_free_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일시"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_title_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_date_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-02-10 오후 6시"
            android:textSize="14sp"
            android:textColor="@color/black80"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_title_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_date_tv"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/activity_seminar_free_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_date_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/activity_seminar_free_place_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가천대학교 비전타워 B201"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_date_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_place_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참가비"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_place_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/activity_seminar_free_pay_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무료"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_pay_tv"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_place_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_deadline_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청 마감"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_pay_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_deadline_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-01-09 오후 6시"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_pay_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_deadline_tv"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

    
    <EditText
        android:id="@+id/activity_seminar_free_apply_name_tv"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:hint="이름을 입력해주세요"
        android:textSize="16sp"
        android:textColor="@color/black80"
        android:paddingStart="12dp"
        android:textColorHint="@color/seminar_light_gray"
        android:background="@drawable/et_seminat_apply"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_apply_info"
        app:layout_constraintStart_toStartOf="parent"/>



    <EditText
        android:id="@+id/activity_seminar_free_apply_nickname_tv"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:hint="닉네임을 입력해주세요"
        android:textSize="16sp"
        android:textColor="@color/black80"
        android:paddingStart="12dp"
        android:textColorHint="@color/seminar_light_gray"
        android:background="@drawable/et_seminat_apply"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_apply_name_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/activity_seminar_free_apply_not_correct_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임이 일치하지 않습니다!"
        android:layout_marginStart="23dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/seminar_red"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_apply_nickname_tv"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/activity_seminar_free_apply_phone_tv"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:hint="전화번호를 입력해주세요"
        android:textSize="16sp"
        android:paddingStart="12dp"
        android:textColor="@color/black80"
        android:textColorHint="@color/seminar_light_gray"
        android:background="@drawable/et_seminat_apply"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_apply_not_correct_nickname_tv"
        app:layout_constraintStart_toStartOf="parent"/>



    <TextView
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_seminar_apply_free"
        android:text="취소하기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="center"
        android:paddingVertical="12dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>