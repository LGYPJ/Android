<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.garamgaebi.garamgaebi.src.main.ContainerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_seminar_free_back_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_back_35dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/activity_container_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black80"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/activity_container_toobar_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seminar_light_gray"
        app:layout_constraintTop_toBottomOf="@+id/activity_container_toolbar"
        />

    <FrameLayout
        android:id="@+id/activity_container_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_container_toobar_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>