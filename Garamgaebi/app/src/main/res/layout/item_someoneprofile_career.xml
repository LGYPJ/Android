<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.garamgaebi.garamgaebi.model.CareerData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            >
            <TextView
                android:id="@+id/activity_myprofile_career_list_item_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.company}"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black80"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
            </TextView>
            <TextView
                android:id="@+id/activity_myprofile_career_list_item_tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.position}"
                android:textColor="@color/black80"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/activity_myprofile_career_list_item_tvName"
                app:layout_constraintStart_toStartOf="parent"
                >
            </TextView>
            <TextView
                android:id="@+id/activity_myprofile_career_list_item_tv_startPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{item.startDate}"
                android:textSize="14sp"
                android:ellipsize="end"
                android:textColor="@color/grayText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_myprofile_career_list_item_tvContent"
                />
            <TextView
                android:id="@+id/activity_myprofile_career_list_item_tv_Textperiod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                android:textSize="14sp"
                android:textColor="@color/grayText"
                app:layout_constraintStart_toEndOf="@id/activity_myprofile_career_list_item_tv_startPeriod"
                app:layout_constraintTop_toTopOf="@id/activity_myprofile_career_list_item_tv_startPeriod"
                />
            <TextView
                android:id="@+id/activity_myprofile_career_list_item_tv_endPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.isWorking().equals(@string/trueString) ? @string/now : item.endDate}"
                android:textSize="14sp"
                android:textColor="@color/grayText"
                app:layout_constraintStart_toEndOf="@id/activity_myprofile_career_list_item_tv_Textperiod"
                app:layout_constraintTop_toTopOf="@id/activity_myprofile_career_list_item_tv_startPeriod"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
