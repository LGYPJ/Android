<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.template.garamgaebi.viewModel.GatheringViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_cancel_apply_info"
            android:layout_width="0dp"
            android:layout_height="137dp"
            android:background="@drawable/btn_seminar_present"
            android:layout_marginTop="16dp"
            android:paddingStart="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/activity_cancel_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2차 세미나"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black80"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_cancel_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/when"
                android:textColor="@color/black80"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_cancel_title_tv" />

            <TextView
                android:id="@+id/activity_cancel_date_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-02-10 오후 6시"
                android:textSize="14sp"
                android:textColor="@color/black80"
                app:layout_constraintTop_toBottomOf="@+id/activity_cancel_title_tv"
                app:layout_constraintStart_toEndOf="@+id/activity_cancel_date_tv"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/activity_cancel_place_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/where"
                android:textColor="@color/black80"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_cancel_date_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/activity_cancel_place_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가천대학교 비전타워 B201"
                android:textColor="@color/black80"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_cancel_date_tv"
                app:layout_constraintStart_toEndOf="@+id/activity_cancel_place_tv" />

            <TextView
                android:id="@+id/activity_cancel_pay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cost"
                android:textColor="@color/black80"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_cancel_place_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/activity_cancel_pay_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료"
                android:textColor="@color/black80"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/activity_cancel_pay_tv"
                app:layout_constraintTop_toBottomOf="@+id/activity_cancel_place_tv" />

            <TextView
                android:id="@+id/activity_cancel_deadline_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deadline"
                android:textColor="@color/black80"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_cancel_pay_tv" />

            <TextView
                android:id="@+id/activity_cancel_deadline_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-01-09 오후 6시"
                android:textColor="@color/black80"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_cancel_pay_tv"
                app:layout_constraintStart_toEndOf="@+id/activity_cancel_deadline_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/activity_cancel_name_tv"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="이채원"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:gravity="left"
            android:paddingTop="12.5dp"
            android:textColor="@color/cancel_gray_tv"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/activity_cancel_gray_background"
            app:layout_constraintTop_toBottomOf="@+id/activity_cancel_apply_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/activity_cancel_nickname_tv"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="신디"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:gravity="left"
            android:paddingTop="12.5dp"
            android:textColor="@color/cancel_gray_tv"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/activity_cancel_gray_background"
            app:layout_constraintTop_toBottomOf="@+id/activity_cancel_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/activity_cancel_phone_tv"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="010-1234-5678"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:gravity="left"
            android:paddingTop="12.5dp"
            android:textColor="@color/cancel_gray_tv"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/activity_cancel_gray_background"
            app:layout_constraintTop_toBottomOf="@+id/activity_cancel_nickname_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/activity_cancel_bank_tv"
            android:layout_width="118dp"
            android:layout_height="48dp"
            android:text="@string/bank"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingTop="12.5dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/cancel_light_gray_tv"
            android:background="@drawable/activity_cancel_background_white"
            app:layout_constraintTop_toBottomOf="@+id/activity_cancel_phone_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/activity_cancel_arrow_down"
            app:layout_constraintEnd_toEndOf="@+id/activity_cancel_bank_tv"
            app:layout_constraintBottom_toBottomOf="@+id/activity_cancel_bank_tv"
            app:layout_constraintTop_toTopOf="@+id/activity_cancel_bank_tv" />

        <EditText
            android:id="@+id/activity_cancel_pay_et"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/activity_cancel_background_white"
            android:hint="@string/seminar_input_account_number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="12dp"
            android:textColorHint="@color/cancel_light_gray_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_cancel_phone_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_cancel_bank_tv" />


        <TextView
            android:id="@+id/activity_cancel_apply_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_seminar_apply_free"
            android:text="@string/origin_cancel"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:paddingVertical="12dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>