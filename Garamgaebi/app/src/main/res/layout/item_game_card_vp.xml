<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_item_card_back"
        android:layout_width="306dp"
        android:layout_height="420dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_item_card"
        android:layout_width="306dp"
        android:layout_height="420dp"
        android:background="@drawable/activity_item_game_card_border"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/activity_item_card_back"
        app:layout_constraintBottom_toBottomOf="@+id/activity_item_card_back"
        app:layout_constraintTop_toTopOf="@+id/activity_item_card_back"
        app:layout_constraintStart_toStartOf="@+id/activity_item_card_back">

        <TextView
            android:id="@+id/activity_item_game_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가천대는 나에게"
            android:textStyle="bold"
            android:textColor="@color/game_blue"
            android:textSize="24sp"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="@+id/activity_item_card"
            app:layout_constraintEnd_toEndOf="@+id/activity_item_card"
            app:layout_constraintTop_toTopOf="@+id/activity_item_card"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_item_game_card_blank_img"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/activity_item_game_blank"
            android:layout_marginTop="8dp"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_item_game_card_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이다"
            android:textStyle="bold"
            android:textColor="@color/game_blue"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="11dp"
            app:layout_constraintStart_toEndOf="@+id/activity_item_game_card_blank_img"
            app:layout_constraintTop_toBottomOf="@+id/activity_item_game_card_tv"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    


</androidx.constraintlayout.widget.ConstraintLayout>