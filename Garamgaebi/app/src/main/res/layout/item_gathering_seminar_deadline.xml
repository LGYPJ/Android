<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/home_seminar_item_border"
    android:backgroundTint="@color/grayF5">

    <TextView
        android:id="@+id/item_gathering_seminar_deadline_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text=""
        android:textColor="@color/black50"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_gathering_seminar_deadline_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/when"
        android:textColor="@color/black50"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_gathering_seminar_deadline_tv_place"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_gathering_seminar_deadline_tv_date_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text=""
        android:textColor="@color/black50"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/item_gathering_seminar_deadline_tv_place_data"
        app:layout_constraintStart_toEndOf="@+id/item_gathering_seminar_deadline_tv_date" />

    <TextView
        android:id="@+id/item_gathering_seminar_deadline_tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/where"
        android:textColor="@color/black50"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_gathering_seminar_deadline_tv_place_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text=""
        android:textColor="@color/black50"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_gathering_seminar_deadline_tv_place" />
</androidx.constraintlayout.widget.ConstraintLayout>

