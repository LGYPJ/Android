<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.garamgaebi.garamgaebi.viewModel.ProfileViewModel" />

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_layout"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@color/whiteForBackground"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="186dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_edit_profile_ivProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:civ_border_overlay="true"
            app:civ_border_width="0dp"
            app:civ_border_color="#000000"
            android:src="@drawable/default_profile"
            app:layout_constraintStart_toStartOf="@id/parent_container"
            app:layout_constraintTop_toTopOf="@id/parent_container" />

        <ImageView
            android:id="@+id/activity_edit_profile_ivplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_22dp"
            app:layout_constraintBottom_toBottomOf="@id/activity_edit_profile_ivProfile"
            app:layout_constraintEnd_toEndOf="@id/activity_edit_profile_ivProfile" />

        <TextView
            android:id="@+id/activity_edit_profile_tv_nickTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="@string/nickName"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_ivProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textColor="@color/blueForBtn"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_nickTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_nickTitle"/>

        <EditText
            android:id="@+id/activity_edit_profile_et_nick"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="0dp"
            android:maxLines="1"
            android:background="@{viewModel.nameFirst || viewModel.nickNameIsValid ? (viewModel.nameFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout) : @drawable/basic_red_border_layout}"
            android:bufferType="spannable"
            android:gravity="center_vertical"
            android:hint='@{viewModel.nameFocusing ? "" : @string/edit_profile_hint}'
            android:paddingStart="12dp"
            android:text="@={viewModel.nickName}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_nickTitle"
            app:onFocusing="@{(check) -> viewModel.setBoolean(viewModel.nameFocusing,viewModel.nameFirst,check)}" />

        <TextView
            android:id="@+id/activity_nickname_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{viewModel.nameState}"
            android:textSize="10sp"
            android:textColor="@color/redForText"
            android:visibility="@{viewModel.nameFirst || viewModel.nickNameIsValid ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_nick" />

        <TextView
            android:id="@+id/activity_edit_profile_tv_teamTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="@string/oneLine_intro"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_nick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textColor="@color/blueForBtn"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_teamTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_teamTitle"/>

        <EditText
            android:id="@+id/activity_edit_profile_et_team"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="0dp"
            android:background="@{(viewModel.oneLineFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout)}"
            android:bufferType="spannable"
            android:maxLines="1"
            android:maxLength="18"
            android:gravity="center_vertical"
            android:hint='@{viewModel.oneLineFocusing ? "" : @string/oneLine_intro_hint}'
            android:paddingStart="12dp"
            android:text="@={viewModel.belong}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:onFocusing="@{(check) -> viewModel.setBoolean(viewModel.oneLineFocusing,viewModel.oneLineFirst,check)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_teamTitle" />


        <TextView
            android:id="@+id/activity_content_et_name_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{viewModel.belong.length() +"/18"}'
            android:textColor="@color/grayAe"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/activity_edit_profile_tv_teamTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_teamTitle"
            app:layout_constraintEnd_toEndOf="@id/activity_edit_profile_et_team"
            />

        <TextView
            android:id="@+id/activity_edit_profile_tv_emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="@string/email"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_team" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textColor="@color/blueForBtn"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_emailTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_emailTitle"/>

        <EditText
            android:id="@+id/activity_edit_profile_et_email"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="0dp"
            android:maxLines="1"
            android:background="@{viewModel.emailFirst || viewModel.emailIsValid ? (viewModel.emailFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout) : @drawable/basic_red_border_layout}"
            android:bufferType="spannable"
            android:gravity="center_vertical"
            android:hint='@{viewModel.emailFocusing ? "" : @string/register_input_email_desc}'
            android:paddingStart="12dp"
            android:text="@={viewModel.email}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:onFocusing="@{(check) -> viewModel.setBoolean(viewModel.emailFocusing,viewModel.emailFirst,check)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_emailTitle" />

        <TextView
            android:id="@+id/activity_email_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{@string/email_wrong_state}"
            android:textSize="10sp"
            android:textColor="@color/redForText"
            android:visibility="@{viewModel.emailFirst || viewModel.emailIsValid ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_email" />

        <TextView
            android:id="@+id/activity_edit_profile_tv_introTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="@string/intro"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_email" />

        <EditText
            android:id="@+id/activity_edit_profile_et_intro"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:maxLength="100"
            android:background="@{(viewModel.introFocusing ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout)}"
            android:bufferType="spannable"
            android:gravity="center_vertical"
            android:hint='@{viewModel.introFocusing ? "" : @string/input_100}'
            android:padding="12dp"
            android:text="@={viewModel.intro}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:onFocusing="@{(check) -> viewModel.setBoolean(viewModel.introFocusing,viewModel.introFirst,check)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_introTitle" />
        <TextView
            android:id="@+id/activity_edit_profile_et_intro_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayAe"
            android:textSize="14sp"
            android:visibility="visible"
            android:textStyle="bold"
            android:text='@{viewModel.intro.length() +"/100"}'
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_introTitle"
            app:layout_constraintEnd_toEndOf="@id/activity_edit_profile_et_intro"
            app:layout_constraintBottom_toBottomOf="@id/activity_edit_profile_tv_introTitle"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/activity_education_save_btn"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:layout_marginBottom="68dp"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@{(viewModel.emailIsValid &amp;&amp; viewModel.nickNameIsValid  &amp;&amp; viewModel.belongIsValid  &amp;&amp; viewModel.introIsValid) ? @drawable/basic_blue_btn_layout : @drawable/basic_gray_btn_layout}"
        android:outlineProvider="none"
        android:clickable="@{(viewModel.emailIsValid &amp;&amp; viewModel.nickNameIsValid &amp;&amp; viewModel.belongIsValid &amp;&amp; viewModel.introIsValid) ? true : false}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>


