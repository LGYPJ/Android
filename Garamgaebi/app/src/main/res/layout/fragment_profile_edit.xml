<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="profileViewModel"
            type="com.garamgaebi.garamgaebi.viewModel.ProfileViewModel" />
        <variable
            name="editViewModel"
            type="com.garamgaebi.garamgaebi.viewModel.EditTextViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="129dp">

        <ImageView
            android:id="@+id/activity_edit_profile_ivProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/activity_myprofile_graycircle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activity_edit_profile_ivplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_22dp"
            app:layout_constraintBottom_toBottomOf="@id/activity_edit_profile_ivProfile"
            app:layout_constraintEnd_toEndOf="@id/activity_edit_profile_ivProfile" />

        <TextView
            android:id="@+id/activity_edit_profile_tv_nickTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="@string/nickName"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_ivProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textColor="@color/blueForBtn"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_nickTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_nickTitle"></TextView>

        <EditText
            android:id="@+id/activity_edit_profile_et_nick"
            android:layout_width="0dp"
            android:layout_height="48dp"

            android:layout_marginTop="0dp"
            android:background="@drawable/basic_gray_border_layout"
            android:bufferType="spannable"
            android:gravity="center_vertical"
            android:hint="@string/edit_profile_hint"
            android:paddingStart="12dp"
            android:text="@={profileViewModel.nickName}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_nickTitle" />

        <TextView
            android:id="@+id/activity_nickname_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=" "
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_nick" />

        <TextView
            android:id="@+id/activity_edit_profile_tv_teamTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="@string/oneLine_intro"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_nick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textColor="@color/blueForBtn"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_teamTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_teamTitle"></TextView>

        <EditText
            android:id="@+id/activity_edit_profile_et_team"
            android:layout_width="0dp"
            android:layout_height="48dp"

            android:layout_marginTop="0dp"
            android:background="@drawable/basic_gray_border_layout"
            android:bufferType="spannable"
            android:gravity="center_vertical"
            android:hint="@string/oneLine_intro_hint"
            android:paddingStart="12dp"
            android:text="@={profileViewModel.belong}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_teamTitle" />

        <TextView
            android:id="@+id/activity_team_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="닉네임 조건"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_team" />

        <TextView
            android:id="@+id/activity_edit_profile_tv_emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="@string/email"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_team" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textColor="@color/blueForBtn"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/activity_edit_profile_tv_emailTitle"
            app:layout_constraintTop_toTopOf="@id/activity_edit_profile_tv_emailTitle"></TextView>

        <EditText
            android:id="@+id/activity_edit_profile_et_email"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/basic_gray_border_layout"
            android:bufferType="spannable"
            android:gravity="center_vertical"
            android:hint="@string/register_input_email_desc"
            android:paddingStart="12dp"
            android:text="@={profileViewModel.email}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_emailTitle" />

        <TextView
            android:id="@+id/activity_email_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="닉네임 조건"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_email" />

        <TextView
            android:id="@+id/activity_edit_profile_tv_introTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="@string/intro"
            android:textColor="@color/black80"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_edit_profile_et_email" />

        <EditText
            android:id="@+id/activity_edit_profile_et_intro"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/basic_gray_border_layout"
            android:bufferType="spannable"
            android:gravity="top"
            android:hint="@string/input_100"
            android:padding="12dp"
            android:text="@={profileViewModel.intro}"
            android:textColor="@color/black80"
            android:textColorHint="@color/grayForBtn"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_profile_tv_introTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_education_save_btn"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:layout_marginBottom="68dp"
        android:outlineProvider="none"
        android:background="@drawable/basic_blue_btn_layout"
        android:text="저장하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>


