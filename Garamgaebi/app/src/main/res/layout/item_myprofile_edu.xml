<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.garamgaebi.garamgaebi.model.EducationData" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        >
        <TextView
            android:id="@+id/activity_myprofile_edu_list_item_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.institution}"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black80"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </TextView>
        <TextView
            android:id="@+id/activity_myprofile_edu_list_item_tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.major}"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/activity_myprofile_edu_list_item_tvName"
            app:layout_constraintStart_toStartOf="parent"
            >
        </TextView>
        <TextView
            android:id="@+id/activity_myprofile_edu_list_item_tv_startPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{item.startDate}"
            android:textSize="14sp"
            android:textColor="@color/grayText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_myprofile_edu_list_item_tvContent"

            ></TextView>
        <TextView
            android:id="@+id/activity_myprofile_edu_list_item_tv_Textperiod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ~ "
            android:textSize="14sp"
            android:textColor="@color/grayText"
            app:layout_constraintStart_toEndOf="@id/activity_myprofile_edu_list_item_tv_startPeriod"
            app:layout_constraintTop_toTopOf="@id/activity_myprofile_edu_list_item_tv_startPeriod"
            ></TextView>
        <TextView
            android:id="@+id/activity_myprofile_edu_list_item_tv_endPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.isLearning().equals(@string/trueString) ? @string/now : item.endDate}"
            android:textSize="14sp"
            android:textColor="@color/grayText"
            app:layout_constraintStart_toEndOf="@id/activity_myprofile_edu_list_item_tv_Textperiod"
            app:layout_constraintTop_toTopOf="@id/activity_myprofile_edu_list_item_tv_startPeriod"
            ></TextView>
        <ImageView
            android:id="@+id/activity_myprofile_edu_list_item_iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>