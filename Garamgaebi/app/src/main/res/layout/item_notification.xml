<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.example.template.garamgaebi.model.NotificationResult" />
        <variable
            name="viewModel"
            type="com.example.template.garamgaebi.viewModel.NotificationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_activity_notification_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_item_activity_notification_gathering"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/item_activity_notification_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.notificationType}"
            android:textSize="14sp"
            android:textColor="@color/gray8a"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@id/item_activity_notification_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_activity_notification_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.content}"
            android:textColor="@color/gray54"
            android:textSize="16sp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/item_activity_notification_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayD9"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>