    <ImageView
        android:id="@+id/activity_item_seminar_profile_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_profile_gary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_item_seminar_profile"
        app:layout_constraintEnd_toEndOf="@+id/activity_item_seminar_profile"
        app:layout_constraintBottom_toBottomOf="@+id/activity_item_seminar_profile"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_item_seminar_profile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/ic_profile_gary"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_profile_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/origin_profile_name"
        android:textSize="12sp"
        android:textColor="@color/black80"
        android:textAlignment="center"
        android:maxLength="4"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_item_seminar_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


