<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.example.template.garamgaebi.viewModel.SeminarViewModel"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_seminar_free_info"
        android:layout_width="0dp"
        android:layout_height="141dp"
        android:paddingStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_seminar_present"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_seminar_free_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.info.result.title}"
            android:textStyle="bold"

            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"



            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_seminar_free_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_seminar_share_btn"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_title_tv"
            app:layout_constraintTop_toTopOf="@+id/activity_seminar_free_title_tv"
            app:layout_constraintBottom_toBottomOf="@+id/activity_seminar_free_title_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일시"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_title_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_date_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.info.result.date}"
            android:textSize="14sp"
            android:textColor="@color/black80"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_title_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_date_tv"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/activity_seminar_free_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_date_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/activity_seminar_free_place_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.info.result.location}"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_date_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_place_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참가비"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_place_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/activity_seminar_free_pay_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Integer.toString(item.info.result.fee).equals(@string/seminar_fee) ? item.feeFree(Integer.toString(item.info.result.fee)) : item.convertFee(Integer.toString(item.info.result.fee))}"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_pay_tv"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_place_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_deadline_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청 마감"
            android:textColor="@color/black80"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_pay_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_deadline_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.info.result.endDate}"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_pay_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_deadline_tv"/>

        <TextView
            android:id="@+id/activity_seminar_free_apply_btn"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/btn_seminar_apply"
            android:text="신청하기"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingVertical="30dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_seminar_free_participant"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_seminar_free_participant_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참석자"
            android:textSize="20sp"
            android:textStyle="bold"

            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16명"
            android:textSize="14sp"

            android:textColor="@color/black"

            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/activity_seminar_free_participant_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_seminar_free_participant_tv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_seminar_free_profile_rv"
            android:layout_width="0dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_seminar_profile"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_participant_tv"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_participant">

        <TextView
            android:id="@+id/activity_seminar_free_preview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발표 미리보기"
            android:textSize="20sp"

            android:layout_marginStart="16dp"
            android:textColor="@color/black"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_seminar_free_present_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_seminar_present"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_seminar_free_preview_tv"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>