<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.example.template.garamgaebi.src.main.profile.MyProfileFragment"/>
        <variable
            name="editTextViewModel"
            type="com.example.template.garamgaebi.viewModel.EditTextViewModel" />
        <variable
            name="serviceCenterFragment"
            type="com.example.template.garamgaebi.src.main.profile.ServiceCenterFragment" />
        <variable
            name="serviceCenterViewModel"
            type="com.example.template.garamgaebi.viewModel.ServiceCenterViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_servicecenter_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
<TextView
    android:id="@+id/activity_servicecenter_tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/serviceCenter_information"
    android:textColor="@color/black80"
    android:textStyle="bold"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
        <TextView
            android:id="@+id/activity_servicecenter_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cs_info"
            android:textColor="@color/black80"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_servicecenter_tv_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/activity_servicecenter_tv_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/response_email"
        android:textColor="@color/black80"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_servicecenter_info"
        />

    <EditText
        android:id="@+id/activity_sevicecenter_tv_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_gray_border_layout"
        android:bufferType="spannable"
        android:gravity="center_vertical"
        android:hint="@string/response_email_desc"
        android:paddingStart="12dp"
        android:text="@={serviceCenterViewModel.email}"
        android:textColor="@color/black80"
        android:textColorHint="@color/grayForBtn"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/activity_servicecenter_tv_email_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_servicecenter_tv_email_title"
        app:onFocusLost="@{(view,check) -> editTextViewModel.setBackgroundEditTextOnFocus(view,check,(@string/response_email))}" />
    <TextView
        android:id="@+id/activity_eservicecenter_email_tv_nameState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/redForText"
        app:layout_constraintStart_toStartOf="@id/activity_sevicecenter_tv_email"
        app:layout_constraintTop_toBottomOf="@id/activity_sevicecenter_tv_email"
        />

    <TextView
        android:id="@+id/activity_servicecenter_tv_option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black80"
        android:textStyle="bold"
        android:text="@string/reason"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_sevicecenter_tv_email"
        />
    <TextView
        android:id="@+id/activity_servicecenter_et_option"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="14sp"
        android:textColor="@color/black80"
        android:paddingStart="12dp"
        android:textColorHint="@color/grayForBtn"
        android:hint="@string/choose_why"
        android:background="@{serviceCenterViewModel.categoryIsValid ? @drawable/basic_black_border_layout : @drawable/basic_gray_border_layout}"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:clickable="false"
        android:text="@={serviceCenterViewModel.category}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_servicecenter_tv_option_title"
        app:layout_constraintStart_toStartOf="@id/activity_servicecenter_tv_option_title" />

    <ImageView
        android:id="@+id/activity_servicecenter_iv_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19.51dp"
        android:src="@drawable/ic_arrow_bottom_14dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_servicecenter_et_option"
        app:layout_constraintEnd_toEndOf="@id/activity_servicecenter_et_option"
        app:layout_constraintTop_toTopOf="@id/activity_servicecenter_et_option"></ImageView>

    <EditText
        android:id="@+id/activity_servicecenter_et_content"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/basic_gray_border_layout"
        android:gravity="top"
        android:hint="@string/input_content"
        android:padding="11dp"
        android:paddingStart="12dp"
        android:textColor="@color/black80"
        android:textColorHint="@color/grayForBtn"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/activity_servicecenter_et_option"
        app:layout_constraintStart_toStartOf="@+id/activity_servicecenter_et_option"
        app:layout_constraintTop_toBottomOf="@+id/activity_servicecenter_et_option"
        app:onFocusLost="@{(view,check) -> editTextViewModel.setBackgroundEditTextOnFocus(view,check,(@string/input_100))}" />
    <TextView
        android:id="@+id/activity_content_et_name_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grayD9"
        android:textSize="14sp"
        android:visibility="visible"
        android:text='@{serviceCenterViewModel.content.length() +"/100"}'
        app:layout_constraintEnd_toEndOf="@id/activity_servicecenter_et_content"
        app:layout_constraintBottom_toBottomOf="@id/activity_servicecenter_et_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_servicecenter_checkbox_rl"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"

        android:clipToOutline="true"
        android:background="@drawable/activity_servicecenter_checkbox_container"
        app:layout_constraintTop_toTopOf="@id/activity_servicecenter_checkbox_desc"
        app:layout_constraintStart_toStartOf="parent"
        >
        <CheckBox
            android:id="@+id/activity_servicecenter_checkbox"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:checked="@={serviceCenterViewModel.agree}"
            android:button="@android:color/transparent"
            android:background="@drawable/ic_checkbox_16dp"
            ></CheckBox>
    </RelativeLayout>
    <TextView
        android:id="@+id/activity_servicecenter_checkbox_desc"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="이메일 정보 제공 동의\n답변을 보내드리기 위해 필요해요"
        android:textColor="#8A8A8A"
        app:layout_constraintStart_toEndOf="@id/activity_servicecenter_checkbox_rl"
        app:layout_constraintTop_toBottomOf="@id/activity_servicecenter_et_content"
        ></TextView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_servicecenter_send_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:text="보내기"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@{(serviceCenterViewModel.emailIsValid &amp;&amp; serviceCenterViewModel.categoryIsValid &amp;&amp; serviceCenterViewModel.contentIsValid &amp;&amp; serviceCenterViewModel.agree) ? @drawable/basic_blue_btn_layout : @drawable/basic_gray_btn_layout}"
        android:outlineProvider="none"
        android:clickable="@{(serviceCenterViewModel.emailIsValid &amp;&amp; serviceCenterViewModel.categoryIsValid &amp;&amp; serviceCenterViewModel.contentIsValid &amp;&amp; serviceCenterViewModel.agree) ? true : false}"
        app:layout_constraintTop_toBottomOf="@id/activity_servicecenter_checkbox_desc"
        app:layout_constraintStart_toStartOf="@id/activity_servicecenter_et_content"
        app:layout_constraintEnd_toEndOf="@id/activity_servicecenter_et_content"
        ></androidx.appcompat.widget.AppCompatButton>
    <TextView
        android:id="@+id/activity_servicecenter_tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AEAEAE"
        android:text="로그아웃"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/activity_servicecenter_tv_between"
        app:layout_constraintEnd_toEndOf="@id/activity_servicecenter_tv_between"
        app:layout_constraintBottom_toTopOf="@id/activity_servicecenter_tv_between"
        />
    <TextView
        android:id="@+id/activity_servicecenter_tv_between"
        android:layout_width="8dp"
        android:layout_height="1dp"
        android:background="@color/grayForBtn"
        android:backgroundTint="#AEAEAE"
        app:layout_constraintStart_toStartOf="@id/activity_servicecenter_tv_withdrawal"
        app:layout_constraintEnd_toEndOf="@id/activity_servicecenter_tv_withdrawal"
        app:layout_constraintBottom_toTopOf="@id/activity_servicecenter_tv_withdrawal"
        />
    <TextView
        android:id="@+id/activity_servicecenter_tv_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textColor="#AEAEAE"
        android:text="회원탈퇴"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
