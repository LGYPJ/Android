<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/activity_organization_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소속"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="115dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/activity_organization_btn_career"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/activity_intro_btn_color"
        android:stateListAnimator="@null"
        android:text="네, 재직중이에요"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/activity_organization_btn_education" />
    <Button
        android:id="@+id/activity_organization_btn_education"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/activity_organization_btn_color"
        android:stateListAnimator="@null"
        android:text="아직 경력이 없어요"
        android:textColor="#2294FF"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>