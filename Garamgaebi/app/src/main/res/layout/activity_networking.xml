<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.networking.NetworkingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_network"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_network_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네트워킹"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_network_back_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_network_arrow_back_35dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/network_light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_network_info"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/top_network"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_network_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3차 네트워킹"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="5.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_network_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_network_share_24dp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/activity_network_title_tv"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/activity_network_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일시"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_title_tv"/>

        <TextView
            android:id="@+id/activity_network_date_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-02-10 오후 6시"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_title_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_network_date_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/activity_network_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_date_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/activity_network_place_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가천대학교 비전타워 B201"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_date_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_network_place_tv"/>

        <TextView
            android:id="@+id/activity_network_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참가비"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_place_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/activity_network_pay_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000원"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/activity_network_pay_tv"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_place_tv"/>

        <TextView
            android:id="@+id/activity_network_deadline_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청 마감"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_pay_tv"/>

        <TextView
            android:id="@+id/activity_network_deadline_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-01-09 오후 6시"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_pay_tv"
            app:layout_constraintStart_toEndOf="@+id/activity_network_deadline_tv"/>

        <TextView
            android:id="@+id/activity_network_apply_btn"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/activity_network_btn_apply"
            android:text="신청하기"
            android:textColor="@color/network_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingVertical="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/activity_network_info_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/network_light_gray"
        app:layout_constraintTop_toBottomOf="@+id/activity_network_info"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_network_participant"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_network_info_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_network_participant_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참석자"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/activity_network_participant_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16명"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="23dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_network_participant_tv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_network_profile_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_network_profile"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_network_participant_tv"
            app:layout_constraintStart_toStartOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/activity_network_participant_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/network_light_gray"
        app:layout_constraintTop_toBottomOf="@+id/activity_network_participant"
        />

    <TextView
        android:id="@+id/activity_network_icebreaking_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이스브레이킹"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_network_participant_bottom"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/activity_network_icebreaking_content1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이스브레이킹 참여는"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/network_icebreaking"
        app:layout_constraintTop_toBottomOf="@+id/activity_network_icebreaking_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/activity_network_icebreaking_content2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네트워킹 당일 정해진 시간에 오픈합니다."
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/network_icebreaking"
        app:layout_constraintTop_toBottomOf="@+id/activity_network_icebreaking_content1_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_network_icebreaking_preview_img"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/activity_network_icebreaking_preview_img"
        app:layout_constraintTop_toBottomOf="@+id/activity_network_icebreaking_content2_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>