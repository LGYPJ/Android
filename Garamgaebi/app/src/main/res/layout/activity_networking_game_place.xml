<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.networking_game.NetworkingGamePlaceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_game"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/activity_game_place_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가천관"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_game_place_back_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_game_arrow_back_35dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/game_light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_game_profile_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_network_game_place_profile"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/top_game"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/activity_game_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/game_light_gray"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_game_profile_rv"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_game_place_card_img"
        android:layout_width="300dp"
        android:layout_height="430dp"
        android:background="@color/game_light_gray"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_game_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_game_place_card_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_network_game_card_next_btn"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_game_place_card_img"
        app:layout_constraintEnd_toEndOf="@+id/activity_game_place_card_img"
        app:layout_constraintBottom_toBottomOf="@+id/activity_game_place_card_img"/>





</androidx.constraintlayout.widget.ConstraintLayout>