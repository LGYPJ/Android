<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.example.template.garamgaebi.model.HomeProgramResult" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/item_home_my_meeting_tv_date"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:text="@{model.date}"
            android:background="@drawable/fragment_home_my_meeting_border"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/black80"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/item_home_my_meeting_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.title}"
            android:textColor="@color/black80"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_home_my_meeting_tv_date"
            app:layout_constraintBottom_toTopOf="@id/item_home_my_meeting_tv_place" />

        <TextView
            android:id="@+id/item_home_my_meeting_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.location}"
            android:textSize="16sp"
            android:textColor="@color/black80"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/item_home_my_meeting_tv_name"
            app:layout_constraintStart_toEndOf="@id/item_home_my_meeting_tv_date"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>