<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/item_home_my_meeting_tv_date"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="@drawable/fragment_home_my_meeting_border"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black80"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_home_my_meeting_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text=""
        android:textColor="@color/black80"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_home_my_meeting_tv_place"
        app:layout_constraintStart_toEndOf="@id/item_home_my_meeting_tv_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_home_my_meeting_tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text=""
        android:textColor="@color/black80"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_home_my_meeting_tv_date"
        app:layout_constraintTop_toBottomOf="@id/item_home_my_meeting_tv_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
