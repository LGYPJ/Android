<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="profileFragment"
            type="com.garamgaebi.garamgaebi.src.main.profile.MyProfileFragment" />
        <variable
            name="profileViewModel"
            type="com.garamgaebi.garamgaebi.viewModel.ProfileViewModel" />
    </data>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteForBackground"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_myProfile_clContainer"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:id="@+id/fragment_myProfile_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="@string/my_profile_title"
                    android:textStyle="bold"
                    android:textColor="@color/black80"
                    android:layout_marginStart="21dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                </TextView>

                <ImageView
                    android:id="@+id/fragment_myProfile_ivCs"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_service_center_24dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/service_center" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayForBtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/network_error_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/network_error_iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_network_alert_70dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/network_error_title_tv"
                    app:layout_constraintVertical_chainStyle="packed"
                    />
                <TextView
                    android:id="@+id/network_error_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/network_error_title"
                    android:layout_marginTop="16dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/network_error_content_tv"
                    app:layout_constraintTop_toBottomOf="@id/network_error_iv"/>
                <TextView
                    android:id="@+id/network_error_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray8a"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:text="@string/network_error_content"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/network_error_title_tv"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/fragment_myProfile_sv_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_clContainer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fragment_myProfile_cl_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fragment_myProfile_ivProfile"
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_profile"
                        app:civ_border_overlay="true"
                        app:civ_border_width="0dp"
                        app:civ_border_color="#000000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                    <TextView
                        android:id="@+id/fragment_myProfile_tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="16dp"
                        android:text=""
                        android:textStyle="bold"
                        android:textAppearance="@style/some_id"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_ivProfile"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/fragment_myProfile_tvSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="@color/black80"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_myProfile_tvUsername" />

                    <TextView
                        android:id="@+id/fragment_myProfile_tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="@color/blueForBtn"
                        android:textSize="16sp"

                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toBottomOf="@+id/fragment_myProfile_tvSchool" />
                    <TextView
                        android:id="@+id/fragment_myProfile_tv_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:padding="12dp"
                        android:text=""
                        android:textColor="@color/black80"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:background="@drawable/basic_gray_border_layout"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_tvEmail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_myProfile_btnEditProfile"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/fragment_myProfile_btnEditProfile"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="16dp"
                        android:text="@string/edit_my_profile"
                        android:textSize="16sp"
                        android:textColor="@color/blueForBtn"
                        android:outlineProvider="none"
                        android:background="@drawable/basic_sky_btn_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_tv_intro"
                        />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fragment_myProfile_cl_snsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/basic_gray_container_title"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_btnEditProfile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_myProfile_cl_snsDesc"
                        >

                        <TextView
                            android:id="@+id/fragment_myProfile_tv_snsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:padding="12dp"
                            android:text="@string/sns"
                            android:textColor="@color/black80"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grayForBtn"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fragment_myProfile_cl_snsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/basic_gray_container_desc"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_cl_snsTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_myProfile_cl_careerTitle"
                        >
                        <TextView
                            android:id="@+id/fragment_myProfile_tv_snsDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:text="@string/sns_desc"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/black80"
                            android:visibility="@{profileViewModel.snsInfoArray.isEmpty ? View.VISIBLE : View.GONE, default = gone}"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/fragment_myProfile_RV_sns"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:nestedScrollingEnabled="false"
                            app:layout_constrainedHeight="true"
                            android:descendantFocusability="blocksDescendants"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_tv_snsDesc"
                            app:layout_constraintBottom_toTopOf="@id/fragment_myProfile_btn_snsAdd">

                        </androidx.recyclerview.widget.RecyclerView>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/fragment_myProfile_btn_snsAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="12dp"
                            android:paddingStart="16.5dp"
                            android:paddingEnd="26.5dp"
                            android:text="@{(@string/sns + ' ' + @string/add)}"
                            android:textSize="16sp"
                            android:textColor="@color/blueForBtn"
                            android:outlineProvider="none"
                            android:drawableStart="@drawable/ic_add_border_round_24dp"
                            android:background="@drawable/basic_blue_white_btn_layout"
                            app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_RV_sns"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fragment_myProfile_cl_careerTitle"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/basic_gray_container_title"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_cl_snsDesc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_myProfile_cl_careerDesc"
                        >

                        <TextView
                            android:id="@+id/fragment_myProfile_tv_careerTitle"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:padding="12dp"
                            android:text="@string/career"
                            android:textColor="@color/black80"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grayForBtn"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fragment_myProfile_cl_careerDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/basic_gray_container_desc"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_cl_careerTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <TextView
                            android:id="@+id/fragment_myProfile_tv_careerDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:text="@string/career_desc"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/black80"
                            android:visibility="@{profileViewModel.careerInfoArray.isEmpty ? View.VISIBLE : View.GONE, default = visible}"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/fragment_myProfile_RV_career"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layout_constrainedHeight="true"
                            android:descendantFocusability="blocksDescendants"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_tv_careerDesc"
                            app:layout_constraintBottom_toTopOf="@id/fragment_myProfile_btn_careerAdd">
                        </androidx.recyclerview.widget.RecyclerView>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/fragment_myProfile_btn_careerAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="12dp"
                            android:paddingStart="16.5dp"
                            android:paddingEnd="26.5dp"
                            android:text="@{@string/career + ' ' +@string/add}"
                            android:textSize="16sp"
                            android:textColor="@color/blueForBtn"
                            android:drawableStart="@drawable/ic_add_border_round_24dp"
                            android:background="@drawable/basic_blue_white_btn_layout"
                            android:outlineProvider="none"
                            app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_RV_career"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fragment_myProfile_cl_eduTitle"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/basic_gray_container_title"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_cl_careerDesc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/fragment_myProfile_cl_eduDesc"
                        >

                        <TextView
                            android:id="@+id/fragment_myProfile_tv_eduTitle"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:padding="12dp"
                            android:text="@string/education"
                            android:textColor="@color/black80"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grayForBtn"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fragment_myProfile_cl_eduDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/basic_gray_container_desc"
                        app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_cl_eduTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <TextView
                            android:id="@+id/fragment_myProfile_tv_eduDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:text="@string/edu_desc"
                            android:visibility="@{profileViewModel.educationInfoArray.isEmpty ? View.VISIBLE : View.GONE, default = visible}"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/black80"
                            app:layout_constraintTop_toTopOf="parent" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/fragment_myProfile_RV_edu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layout_constrainedHeight="true"
                            android:descendantFocusability="blocksDescendants"
                            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_tv_eduDesc"
                            app:layout_constraintBottom_toTopOf="@id/fragment_myProfile_btn_eduAdd">
                        </androidx.recyclerview.widget.RecyclerView>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/fragment_myProfile_btn_eduAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:paddingStart="16.5dp"
                            android:paddingEnd="26.5dp"
                            android:text="@{@string/education + ' ' +@string/add}"
                            android:textSize="16sp"
                            android:textColor="@color/blueForBtn"
                            android:drawableStart="@drawable/ic_add_border_round_24dp"
                            android:background="@drawable/basic_blue_white_btn_layout"
                            android:outlineProvider="none"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/fragment_myProfile_RV_edu" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>